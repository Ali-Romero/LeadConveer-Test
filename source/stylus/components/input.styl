.input
  display: flex
  align-items: center
  height: 100%
  width 100%
  position relative

  &__field
    width: 100%
    height: 59px
    line-height: normal
    font-size: 15px
    padding: 0
    display: block
    outline: none
    border-radius: 16px
    border: none
    background: $color-grey
    color: $color-white
    font-family: "Inter-Regular"
    line-height: 120%
    font-weight: 400
    padding: 0 10px 0 24px
    transition: 0.3s
    +above($breakpoints.sm)
      height: 48px
      font-size: 14px
      padding: 0 10px 0 16px
      border-radius: 14px
    +above($breakpoints.md)
      font-size: 16px
      height: 52px
      padding: 0 10px 0 18px
      border-radius: 16px
    +above($breakpoints.xxl)
      border-radius: 20px
      height: 59px
      font-size: 16px
      padding: 0 10px 0 24px
    &:-webkit-autofill,
    &:-webkit-autofill:hover,
    &:-webkit-autofill:focus,
    &:-webkit-autofill:active
      -webkit-box-shadow: 0 0 0px 1000px white inset
      transition: all 5000s ease-in-out 0s
    &::-ms-input-placeholder
      font-family: "Inter-Regular"
      font-weight: 400
      color: #d2d2d2;
    &::-moz-placeholder
      font-family: "Inter-Regular"
      font-weight: 400
      color: #d2d2d2;
    &::-webkit-input-placeholder
      font-family: "Inter-Regular"
      font-weight: 400
      color: #d2d2d2;
    &::placeholder
      font-family: "Inter-Regular"
      font-weight: 400
      color: #d2d2d2;
    &.error
      color: $color-error
      &::placeholder
        color: $color-error
      &::-ms-input-placeholder
        color: $color-error
      &::-moz-placeholder
        color: $color-error
      &::-webkit-input-placeholder
        color: $color-error
      animation: shake 0.6s;
      @keyframes shake {
        10%, 90% {
          transform: translate3d(-1px, 0, 0)
        }
        
        20%, 80% {
          transform: translate3d(2px, 0, 0)
        }

        30%, 50%, 70% {
          transform: translate3d(-4px, 0, 0)
        }

        40%, 60% {
          transform: translate3d(4px, 0, 0)
        }
      }
    &:focus
      border: 1px solid $color-brown-2

    &--textarea
      resize: none
      padding-top: 10px
      height: 100px
      +above($breakpoints.sm)
        padding-top: 10px
        height: 48px
      +above($breakpoints.md)
        padding-top: 18px
        height: 54px
      +above($breakpoints.xxl)
        height: 75px
        padding-top: 28px
