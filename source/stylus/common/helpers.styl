.wrapper
  max-width: 351px
  margin: 0 auto
  padding: 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width: 730px
    margin: 0 auto
    padding: 0 12px
  +above($breakpoints.md)
    max-width: 970px
    padding: 0 15px
  +above($breakpoints.xxl)
    padding: 0 20px
    max-width: 1820px

section
  font-size: 15px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 15px
  +above($breakpoints.xxl)
    font-size: 18px

h1,
h2,
h3,
h4
  font-family: "Montserrat-Bold"
  font-weight: 700

.d-flex
  display: flex
.d-block
  display: block
.d-i-block
  display: inline-block
.d-inline
  display: inline
.d-none
  display: none

.color-white
  color: $color-white
.color-black
  color: $color-black
.color-grey
  color: $color-grey
.color-primary
  color: $color-primary

.font-i-reg
  font-family: "Inter-Regular"
  font-weight: 400
.font-m-bold
  font-family: "Montserrat-Bold"
  font-weight: 700

.font-s-12
  font-size: 10px
  line-height: 140%
  +above($breakpoints.md)
    font-size: 11px
  +above($breakpoints.xxl)
    font-size: 12px
.font-s-14
  font-size: 11px
  line-height: 120%
  +above($breakpoints.md)
    font-size: 13px
  +above($breakpoints.xxl)
    font-size: 14px
.font-s-16
  line-height: 120%
  font-size: 14px
  +above($breakpoints.sm)
    font-size: 13px
  +above($breakpoints.md)
    font-size: 14px
  +above($breakpoints.xxl)
    font-size: 16px
.font-s-18
  font-size: 15px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 14px
  +above($breakpoints.md)
    font-size: 16px
  +above($breakpoints.xxl)
    font-size: 18px
.font-s-20
  font-size: 16px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 15px
  +above($breakpoints.md)
    font-size: 17px
  +above($breakpoints.xxl)
    font-size: 20px
.font-s-22
  font-size: 16px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 16px
  +above($breakpoints.md)
    font-size: 18px
  +above($breakpoints.xxl)
    font-size: 22px
.font-s-24
  font-size: 17px
  line-height: normal
  +above($breakpoints.md)
    font-size: 19px
  +above($breakpoints.xxl)
    font-size: 24px
.font-s-26
  font-size: 18px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 18px
  +above($breakpoints.md)
    font-size: 20px
  +above($breakpoints.xxl)
    font-size: 26px
.font-s-28
  font-size: 17.5px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 19px
  +above($breakpoints.md)
    font-size: 23px
  +above($breakpoints.xxl)
    font-size: 28px
.font-s-32
  font-size: 18px
  line-height: normal
  +above($breakpoints.sm)
    font-size: 20px
  +above($breakpoints.md)
    font-size: 24px
  +above($breakpoints.xxl)
    font-size: 32px
.font-s-34
  font-size: 34px
  line-height: 120%
  +above($breakpoints.sm)
    font-size: 21px
  +above($breakpoints.md)
    font-size: 26px
  +above($breakpoints.xxl)
    font-size: 34px
.font-s-48
  font-size: 26px
  line-height: 108%
  +above($breakpoints.sm)
    font-size: 28px
  +above($breakpoints.md)
    font-size: 36px
  +above($breakpoints.xxl)
    font-size: 48px
.font-s-80
  font-size: 34px
  line-height: 100%
  +above($breakpoints.sm)
    font-size: 36px
  +above($breakpoints.md)
    font-size: 48px
  +above($breakpoints.xxl)
    font-size: 80px

.text-up
  text-transform: uppercase
.text-init
  text-transform: initial
.text-center
  text-align: center
.text-left
  text-align: left
.text-right
  text-align: right
.text-ital
  font-style: italic
.text-bold
  font-weight: bold

.tap-color
  -webkit-tap-highlight-color: transparent
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none

.border-r-12
  border-radius: 8px
  +above($breakpoints.md)
    border-radius: 10px
  +above($breakpoints.xxl)
    border-radius: 12px
.border-r-16
  border-radius: 10px
  +above($breakpoints.md)
    border-radius: 13px
  +above($breakpoints.xxl)
    border-radius: 16px
.border-r-20
  border-radius: 16px
  +above($breakpoints.sm)
    border-radius: 14px
  +above($breakpoints.md)
    border-radius: 16px
  +above($breakpoints.xxl)
    border-radius: 20px
.border-r-30
  border-radius: 18px
  +above($breakpoints.md)
    border-radius: 22px
  +above($breakpoints.xxl)
    border-radius: 30px
.border-r-40
  border-radius: 18px
  +above($breakpoints.md)
    border-radius: 22px
  +above($breakpoints.xxl)
    border-radius: 40px

.transform-unset
  +above($breakpoints.sm)
    transform: unset !important
    transform-style: unset !important
