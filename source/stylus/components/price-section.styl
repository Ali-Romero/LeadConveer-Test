.price-section
  &__inner
    padding: 40px 0
    +above($breakpoints.sm)
      padding: 60px 0
    +above($breakpoints.md)
      padding: 80px 0
    +above($breakpoints.xxl)
      padding: 126px 0

  &__title
    margin: 0 0 22px 0
    +above($breakpoints.md)
      margin: 0 0 32px 0
    +above($breakpoints.xxl)
      margin: 0 0 40px 0

  &__cards-list
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    +above($breakpoints.xxl)
      gap: 20px;

  &__cards-item
    flex: 1 1 calc(50% - 12px);
    +above($breakpoints.xxl)
      flex: 1 1 calc(50% - 20px);
