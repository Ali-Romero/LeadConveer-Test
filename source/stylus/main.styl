@font-face
  font-family: "Inter-Regular"
  src: url('../fonts/Inter-Regular.woff'), url('../fonts/Inter-Regular.woff2')
  font-display: swap
@font-face
  font-family: "Montserrat-Bold"
  src: url('../fonts/Montserrat-Bold.woff'), url('../fonts/Montserrat-Bold.woff2')
  font-display: swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

.page
  display: flex
  flex-direction: column
  min-height: 100%
  overflow: hidden
  position relative
  background-color: $color-white
  color: $color-dark-grey

  &--thanks
    font-size: 13px
    line-height: 130%
    background: #e4e2de;
    position relative
    z-index 1
    +above($breakpoints.xxl)
      font-size: 16px

  &__content
    flex: 1
    &--layout
      display: flex
      justify-content: center
      align-items: center
      flex-direction: column
