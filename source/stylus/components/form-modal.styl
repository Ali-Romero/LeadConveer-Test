.form-modal
  &__feedback
    background: $color-light-grey
    padding: 22px 4px
    border-radius: 14px
    +above($breakpoints.sm)
      padding: 26px 22px
    +above($breakpoints.xxl)
      padding: 30px 32px

  &__title
    font-size: 23px;
    line-height: 124%
    margin: 0 -4px 18px -4px
    font-family: "Montserrat-Bold"
    font-weight: 700
    color: $color-dark-grey
    +above($breakpoints.sm)
      margin: 0 0 20px 0
    +above($breakpoints.md)
      font-size: 25px
      margin: 0 0 24px 0
    +above($breakpoints.xxl)
      margin: 0 0 28px 0
      font-size: 30px
    br
      display: block

  &__list
    margin: 0 auto
    width 278px
    +above($breakpoints.sm)
      width 286px
    +above($breakpoints.md)
      width 314px
    +above($breakpoints.xxl)
      width 366px
    br
      display: inline-block

  &__item
    height: 54px
    margin-bottom: 10px
    +above($breakpoints.sm)
      height: 50px
      margin-bottom: 8px
    +above($breakpoints.md)
      height: 56px
    +above($breakpoints.xxl)
      height: 66px
      margin-bottom: 10px
    .input__field
      height: 100%
    .btn
      height: 100%

  &__agree
    font-size: 11px;
    line-height: 120%
    margin: 0 -10px
    margin-top: 20px
    +above($breakpoints.sm)
      font-size: 11px;
    +above($breakpoints.md)
      font-size: 12px;
    +above($breakpoints.xxl)
      font-size: 14px;
    a
      text-decoration: underline
