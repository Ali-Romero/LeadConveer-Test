.menu
  position: fixed;
  top: 0;
  bottom: 0
  right: 0;
  width: 100%;
  height: 100%;
  background-color: #808080;
  color: $color-white
  z-index: 24000;
  transform: translateX(100%);
  opacity: 0;

  &__wrapper
    padding: 24px 16px;
    display: flex
    flex-direction: column
    justify-content: space-between
    height: 100%
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;

  &__logo
    display: inline-block

  &__close
    position: absolute;
    z-index 222
    top: 20px;
    right: 20px;
    .close-button
      background: none;
      border: 1px solid rgb(169, 169, 169)
      border-radius: 6px
      cursor: pointer;
      padding: 8px
      transform: scale(1)
      transition: 0.3s
      -webkit-tap-highlight-color: transparent
      -webkit-touch-callout: none
      -webkit-user-select: none
      -khtml-user-select: none
      -moz-user-select: none
      -ms-user-select: none
    &:hover
      .close-button
        transform: scale(1.4)

  &__contacts-list
    display: flex
    align-items: center
    gap: 10px
    margin: 0 0 26px 0

body.menu-open
  overflow: hidden;
  touch-action: none;